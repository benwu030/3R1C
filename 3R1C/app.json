{
  "expo": {
    "name": "3R1C",
    "slug": "3R1C",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
      {
        "fonts": ["./assets/fonts/Signifier-Bold.otf",
      "./assets/fonts/Signifier-BoldItalic.otf",
      "./assets/fonts/Signifier-Extralight.otf",
      "./assets/fonts/Signifier-ExtralightItalic.otf",
      "./assets/fonts/Signifier-Light.otf",
      "./assets/fonts/Signifier-LightItalic.otf",
      "./assets/fonts/Signifier-Medium.otf",
      "./assets/fonts/Signifier-MediumItalic.otf",
      "./assets/fonts/Signifier-Regular.otf",
      "./assets/fonts/Signifier-RegularItalic.otf",
      "./assets/fonts/Signifier-Thin.otf",
      "./assets/fonts/Signifier-ThinItalic.otf"


      ]
      }
    ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
